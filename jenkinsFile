pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                 git url: 'https://github.com/cedric-bike/jenkins.git', branch: 'master'
            }
        }

        stage('Install Node.js & Dependencies') {
             steps {
                script {
                    def nodeInstalled = sh(script: 'which node', returnStatus: true) == 0
                    if (!nodeInstalled) {
                        sh 'curl -fsSL https://deb.nodesource.com/setup_18.x | bash -'
                        sh 'apt-get install -y nodejs'
                    }
                }
                sh 'npm install'
    }
}

        stage('Install Dependencies') {
            steps {
                cache(path: 'node_modules', key: 'npm-cache') {
                    sh 'npm install'
                }
    }
}

        stage('Run Tests') {
            steps {
                sh 'npm test' // Si tu n’as pas de tests, tu peux enlever cette étape
            }
        }

        stage('Build App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Start App') {
            steps {
                sh 'npm run start' // ou `npm run start:dev` si c'est en mode développement
            }
        }
    }

    post {
        success {
            echo '🚀 Déploiement réussi !'
        }
        failure {
            echo '❌ Erreur pendant l’exécution du pipeline'
        }
    }
}
