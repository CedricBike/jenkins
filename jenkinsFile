pipeline {
    agent any  // Runs on any available agent

    environment {
                GIT_REPO = 'https://github.com/CedricBike/jenkins.git'
    }

    stages {
        stage('Checkout') {
            steps {
                script {
                    echo 'Cloning repository...'
                    git branch: 'master', url: env.GIT_REPO 
                }
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    echo 'Installing dependencies...'
                    sh 'npm install'  // Change this based on your project (e.g., 'mvn install' for Java)
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    echo 'Running tests...'
                    sh 'npm test'  // Change based on your project (e.g., 'mvn test' for Java)
                }
            }
        }

        stage('Build') {
            steps {
                script {
                    echo 'Building project...'
                    sh 'npm run build'  // Modify as needed
                }
            }
        }

        stage('Deploy') {
            when {
                branch 'main'  // Deploy only when on the 'main' branch
            }
            steps {
                script {
                    echo 'Deploying application...'
                    sh 'npm run deploy'  // Modify this for your deployment process
                }
            }
        }
    }

    post {
        always {
            echo 'Pipeline execution finished.'
        }
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed!'
        }
    }
}
