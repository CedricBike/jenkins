pipeline {
    agent any

    environment {
        NODE_VERSION = '18' // Assure-toi que cette version est install√©e sur l'agent
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://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@github.com/CedricBike/jenkins.git' // Remplace par l'URL de ton repo
            }
        }

        stage('Install Dependencies') {
            steps {
                script {
                    def nodeInstalled = sh(script: 'which node', returnStatus: true) == 0
                    if (!nodeInstalled) {
                        error("Node.js n'est pas install√© sur l'agent Jenkins")
                    }
                }
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test' // Si tu n‚Äôas pas de tests, tu peux enlever cette √©tape
            }
        }

        stage('Build App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Start App') {
            steps {
                sh 'npm run start' // ou `npm run start:dev` si c'est en mode d√©veloppement
            }
        }
    }

    post {
        success {
            echo 'üöÄ D√©ploiement r√©ussi !'
        }
        failure {
            echo '‚ùå Erreur pendant l‚Äôex√©cution du pipeline'
        }
    }
}
