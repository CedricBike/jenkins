pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                 git url: 'https://github.com/cedric-bike/jenkins.git', branch: 'master'
            }
        }

        stage('Install Node.js & Dependencies') {
             steps {
                script {
                    def nodeInstalled = sh(script: 'which node', returnStatus: true) == 0
                    if (!nodeInstalled) {
                        sh 'curl -fsSL https://deb.nodesource.com/setup_18.x | bash -'
                        sh 'apt-get install -y nodejs'
                    }
                }
                sh 'npm install'
    }
}

        stage('Install Dependencies') {
            steps {
                cache(path: 'node_modules', key: 'npm-cache') {
                    sh 'npm install'
                }
    }
}

        stage('Run Tests') {
            steps {
                sh 'npm test' // Si tu nâ€™as pas de tests, tu peux enlever cette Ã©tape
            }
        }

        stage('Build App') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Start App') {
            steps {
                sh 'npm run start' // ou `npm run start:dev` si c'est en mode dÃ©veloppement
            }
        }
    }

    post {
        success {
            echo 'ğŸš€ DÃ©ploiement rÃ©ussi !'
        }
        failure {
            echo 'âŒ Erreur pendant lâ€™exÃ©cution du pipeline'
        }
    }
}
